@plugin("@smeli/plugin-ui")

# Shader demo

glsl: "
  precision mediump float;
  
  uniform float time;

  void main()
  {
    gl_FragColor = vec4(gl_FragCoord.xy / 500.0, sin(time), 1.0);
  }
"

ui: ui {
  theme: default_themes.dark
  page: ui.surface {
    direction: "row"
    responsive: true
    item0: ui.shader {
      code: glsl
    }
    item1: ui.surface {
      direction: "column"
      elevation: 2
      item0: ui.outline {}
    }
  }
}
