{
  "name": "@smeli/vscode",
  "displayName": "Smeli",
  "description": "Smeli language support for VS Code",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/smeli-lang/smeli",
    "directory": "packages/smeli-vscode"
  },
  "main": "dist/extension.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:smeli",
    "onCommand:smeli.openPreview"
  ],
  "contributes": {
    "languages": [
      {
        "id": "smeli",
        "aliases": [
          "Smeli",
          "smeli"
        ],
        "extensions": [
          ".smeli"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "smeli",
        "scopeName": "source.smeli",
        "path": "./syntaxes/smeli.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "smeli.openPreview",
        "title": "Open Preview",
        "category": "Smeli"
      }
    ]
  }
}
